public class Employee {
    String name;
     String position;
     String mail;
    String number ;
     int salary;
     int age;


    public Employee(String name,String position,String mail,String number ,int salary,int age){
        this.name = name;
        this.position =position;
        this.mail =mail;
        this.number =number ;
        this.salary =salary;
        this.age =age;
    }

    public void infoEmployee(){
        System.out.format("ФИО: %s \nдолжность: %s  \nemail:  %s\nтелефон: %s\nзарплата: %d\nвозраст: %d \n",name,position,mail,number,salary,age );
    }
}
